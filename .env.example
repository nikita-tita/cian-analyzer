# ==========================================
# Cian Parser Configuration
# ==========================================
DELAY_BETWEEN_REQUESTS=2
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
USE_SELENIUM=false

# ==========================================
# Redis Configuration (Session Storage)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ==========================================
# PostgreSQL Configuration (Historical Data)
# ==========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cian_analyzer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/cian_analyzer.log
LOG_JSON=false

# ==========================================
# Cache Configuration
# ==========================================
CACHE_ENABLED=true
CACHE_MEMORY_MAX_SIZE=100
CACHE_DEFAULT_TTL=3600

# ==========================================
# Async Parser Configuration
# ==========================================
ASYNC_MAX_CONCURRENT=5
ASYNC_TIMEOUT=30000
ASYNC_RETRY_ATTEMPTS=3

# ==========================================
# Flask Configuration
# ==========================================
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-here

# ==========================================
# Monitoring & Metrics
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
